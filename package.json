{
  "name": "mrblu",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "pnpm --filter @mrblu/web dev",
    "dev:api": "pnpm --filter @mrblu/web dev:api",
    "dev:mobile": "pnpm --filter @mrblu/mobile start",
    "build": "turbo build",
    "build:web": "pnpm --filter @mrblu/web build",
    "deploy": "pnpm build:web && pnpm --filter @mrblu/web deploy",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18"
  }
}
